{
  "display_information": {
    "name": "Quotastic",
    "description": "Save your team's best quotes! (by Build To Sell B.V.)",
    "background_color": "#FF6B6B",
    "long_description": "Quotastic is a fun Slack bot that makes it easy to save funny, inspiring, or memorable quotes from team members. Perfect for capturing those unforgettable moments during meetings, brainstorms, or casual conversations!"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Quotastic",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/quote",
        "description": "Manage team quotes",
        "usage_hint": "[blank for random] | add [text] | list | delete [id]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:history",
        "channels:read",
        "chat:write",
        "commands",
        "groups:history",
        "groups:read",
        "im:history",
        "im:read",
        "mpim:history",
        "mpim:read",
        "users:read"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": false
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}